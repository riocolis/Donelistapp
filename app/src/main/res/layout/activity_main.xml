<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseLoginOrRegister">
    <Button
            android:text="@string/btn_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_Daftar"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true" android:backgroundTint="@color/colorButtonBlue"
            android:textColor="@android:color/white"/>
    <Button
            android:text="@string/btn_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_Masuk" android:layout_below="@id/btn_Daftar"
            android:layout_centerHorizontal="true" android:layout_marginTop="50dp"
            android:textColor="@color/colorWhite" android:backgroundTint="@color/colorButtonBlue"/>
</RelativeLayout>