<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.login">

    <Button
            android:text="@string/btn_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_Masuk"
            android:layout_centerHorizontal="true" android:backgroundTint="@color/colorButtonBlue"
            android:textColor="@android:color/white" android:layout_below="@id/txtPasswordMasuk"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmailMasuk" android:layout_centerHorizontal="true" android:layout_marginTop="250dp"
            android:hint="@string/txt_email" android:singleLine="true" android:selectAllOnFocus="false"
            style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPasswordMasuk" android:layout_centerHorizontal="true"
            android:hint="@string/txt_password" android:singleLine="true" android:selectAllOnFocus="false"
            style="@android:style/Widget.DeviceDefault.AutoCompleteTextView" android:layout_below="@id/txtEmailMasuk"
            android:layout_marginTop="30dp"/>
</RelativeLayout>