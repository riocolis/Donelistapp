<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.aktivitas">

    <TextView
            android:text="@string/txt_activity_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtActivityAdd" android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp" android:textSize="32sp" android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtActivityName"
            android:layout_below="@+id/txtActivityAdd" android:layout_marginStart="0dp"
            android:layout_alignStart="@+id/txtActivityAdd" android:textSize="32sp"
            android:textColor="@android:color/black"/>
    <EditText
            android:background="@null"
            android:layout_width="329dp"
            android:layout_height="272dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextActivity" android:layout_marginTop="74dp"
            android:layout_below="@+id/txtActivityName"
            android:layout_alignStart="@+id/txtActivityName" android:hint="........."/>
    <Button
            android:text="@string/btn_tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_tambah"
            android:backgroundTint="@color/colorButtonBlue"
            android:textColor="@android:color/white"
            android:layout_below="@+id/editTextActivity"
            android:layout_marginTop="69dp" android:layout_centerHorizontal="true"/>
</RelativeLayout>